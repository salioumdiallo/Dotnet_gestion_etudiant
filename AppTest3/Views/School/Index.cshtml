@model IEnumerable<AppTest3.Models.School>

@{
    ViewData["Title"] = "Index";
}

<h1>Listes Des Schools</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolAdress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolAdress)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SchoolID"><img src="~/images/edit.png" style="height:30px; width:30px" /></a> |
                    <a asp-action="Details" asp-route-id="@item.SchoolID"><img src="~/images/detail.jpg" style="height:30px; width:30px" /></a> |
                    <a asp-action="Delete" asp-route-id="@item.SchoolID"><img src="~/images/delete.png" style="height:30px; width:30px" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>